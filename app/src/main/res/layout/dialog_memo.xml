<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/d_FL"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000">
    </ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/inputNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:text="Memo"
            android:textSize="25dp"/>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/memoPad">
            <TableRow>
                <ToggleButton
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="3dp"
                    android:textOff="1"
                    android:textOn="1"
                    android:textSize="20dp"/>
                <ToggleButton
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="3dp"
                    android:textOff="2"
                    android:textOn="2"
                    android:textSize="20dp"/>
                <ToggleButton
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="3dp"
                    android:textOff="3"
                    android:textOn="3"
                    android:textSize="20dp"/>
            </TableRow>
            <TableRow>
                <ToggleButton
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="3dp"
                    android:textOff="4"
                    android:textOn="4"
                    android:textSize="20dp"/>
                <ToggleButton
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="3dp"
                    android:textOff="5"
                    android:textOn="5"
                    android:textSize="20dp"/>
                <ToggleButton
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="3dp"
                    android:textOff="6"
                    android:textOn="6"
                    android:textSize="20dp"/>
            </TableRow>
            <TableRow>
                <ToggleButton
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="3dp"
                    android:textOff="7"
                    android:textOn="7"
                    android:textSize="20dp"/>
                <ToggleButton
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="3dp"
                    android:textOff="8"
                    android:textOn="8"
                    android:textSize="20dp"/>
                <ToggleButton
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="3dp"
                    android:textOff="9"
                    android:textOn="9"
                    android:textSize="20dp"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</FrameLayout>
