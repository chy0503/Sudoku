<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8C9EFF">

    <TextView
        android:id="@+id/mainS1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="180dp"
        android:textAlignment="center"
        android:text="WELCOME\nSUDOKU"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/mainS2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="110dp">
        <Button
            android:id="@+id/ruleB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/solid_button"
            android:textColor="#8C9EFF"
            android:textSize="25dp"
            android:text="RULE" />

        <Button
            android:id="@+id/startB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/solid_button"
            android:textColor="#8C9EFF"
            android:textSize="25dp"
            android:text="START" />

        <Button
            android:id="@+id/recordB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/solid_button"
            android:textColor="#8C9EFF"
            android:textSize="25dp"
            android:text="RECORD" />
    </LinearLayout>

    <ImageView
        android:id="@+id/levelS1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8C9EFF"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/levelS2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="LEVEL"
            android:textSize="60dp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/easyB"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:background="@drawable/solid_button"
            android:onClick="levelClick"
            android:text="EASY"
            android:textColor="#8C9EFF"
            android:textSize="30dp" />

        <Button
            android:id="@+id/normalB"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/solid_button"
            android:onClick="levelClick"
            android:text="NORMAL"
            android:textColor="#8C9EFF"
            android:textSize="30dp" />

        <Button
            android:id="@+id/hardB"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/solid_button"
            android:onClick="levelClick"
            android:text="HARD"
            android:textColor="#8C9EFF"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/closeB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="close"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>
</FrameLayout>


